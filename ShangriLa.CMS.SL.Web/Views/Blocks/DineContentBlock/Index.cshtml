@model ShangriLa.CMS.SL.Web.Models.Blocks.HotelHomepage.DineContentBlock

<!-- The Table Module starts here-->
<section id="dining" class="the-table equal-height-section inpage-element">
    <div class="table-left-bg">
        <div class="table-right-bg">
            <div class="container carousel-container">
                <div class="section-header read-more-section-header">
                    <h2 class="section-heading">Dining has never been so fine</h2>
                    <p class="description">Restaurants at the Shangri-La Hotel, Singapore take you on a culinary world tour, from Cantonese and Japanese delicacies to authentic Italian, contemporary international cuisine and traditional high tea.</p><a href="javascript:void(0)" class="read-more-droplink icon-ios-arrow-down">READ MORE</a>
                    <div class="logo-container"><img src="@Url.Content("~/Content/img/content/the-table-logo.png")" alt="{CMS}"></div>
                </div>
                <div class="row">
                    <div class="owl-carousel mobile-carousel">
                        <div class="item">
                            <div class="col-xs-12 col-sm-6 no-gutter">
                                <div class="restaurant-container">
                                    <div class="image-container scaled-image"><img src="@Url.Content("~/Content/img/content/nadaman.jpg")" alt="{CMS}"></div>
                                    <div class="content-container shadow-box mobile-equal-height-block">
                                        <div class="new-status">New Opening</div>
                                        <div class="heading">Nadaman</div>
                                        <div class="dish-type">Japanese | $$</div>
                                        <p class="call hidden-xs hidden-sm">CALL: +65 0000 0000</p>
                                        <p class="call visible-xs visible-sm"> <a href="tel: +6500000000">CALL: +65 0000 0000</a></p>
                                        <div class="button-aligner"><a href="#" class="book-table">BOOK A TABLE</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="col-xs-12 col-sm-6 no-gutter">
                                <div class="restaurant-container">
                                    <div class="image-container scaled-image"><img src="@Url.Content("~/Content/img/content/the-waterfall.jpg")" alt="{CMS}"></div>
                                    <div class="content-container shadow-box mobile-equal-height-block">
                                        <div class="new-status">Member Favourite</div>
                                        <div class="heading">The Waterfall</div>
                                        <div class="dish-type">Italian | $$$</div>
                                        <p class="call hidden-xs hidden-sm">CALL: +65 0000 0000</p>
                                        <p class="call visible-xs visible-sm"> <a href="tel: +6500000000">CALL: +65 0000 0000</a></p>
                                        <div class="button-aligner"><a href="#" class="book-table">BOOK A TABLE</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="view-all-button"><a href="#" class="button-secondary">SEE ALL RESTAURANTS &amp; BARS</a></div>
            </div>
        </div>
    </div>
</section>
<!-- The Table Module Ends here-->
