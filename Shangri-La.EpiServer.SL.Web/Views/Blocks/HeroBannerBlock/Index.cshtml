@model Shangri_La.EpiServer.SL.Web.Models.Blocks.HeroBannerBlock

<section id="main-banner" class="viewport-element main-banner-hotel-landing lighter-text">
    <div class="caption-container-hotel-landing">
        @*<h1 class="heading">Shangri-La Hotel, Singapore</h1>
            <p class="description">A lush, green sanctuary of calm in one of Asia's most dynamic modern cities, and the place where the legendary Shangri-La story first began.</p>*@
        <h1 class="heading">@Html.PropertyFor(m => m.Title)</h1>
        <p class="description">@Html.PropertyFor(m => m.ShortDescription)</p>
        <div data-city="kowloon" data-lang="" class="climate-time-control">
            <span class="cloud"> </span><span class="temp"> </span><span class="time"> </span>
        </div>
    </div>
    <div class="image-container">
        <img src="@Url.ContentUrl(Model.DesktopImage)?width=1400&height=700&mode=crop&scale=canvas" alt="@Model.AlternateText">
        @*<img src="img/content/main-banner-hotel-landing.jpg" alt="{CMS}">*@
    </div>
    <a href="#overview" class="explore-button icon-ios-arrow-down"><span></span></a>
</section>

