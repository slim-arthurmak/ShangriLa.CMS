@model Shangri_La.EpiServer.Common.Models.Blocks.SL.SLDineTeaserBlock

@{
    string pricerange = "";

    for (int i = 0; i < Model.PricePange; i++)
    {
        pricerange += "$";
    }
}

<div class="item">
    <div class="col-xs-12 col-sm-6 no-gutter">
        <div class="restaurant-container">
            <div class="image-container scaled-image">
                <a href="@Url.ContentUrl(Model.Link)"><img src="@Url.ContentUrl(Model.Image)?width=562&height=281&mode=crop&scale=canvas" alt="{CMS}"></a>
            </div>
            <div class="content-container shadow-box mobile-equal-height-block">
                <div class="new-status">@Html.PropertyFor(m => m.Label)</div>
                <div class="heading"><a href="@Url.ContentUrl(Model.Link)">@Html.PropertyFor(m => m.Heading)</a></div>
                <div class="dish-type">@Html.PropertyFor(m => m.CuisineType) | @pricerange</div>
                <p class="call hidden-xs hidden-sm">CALL: @Html.PropertyFor(m => m.Phone)</p>
                <p class="call visible-xs visible-sm"> <a href="tel: @Html.PropertyFor(m => m.Phone)">CALL: @Html.PropertyFor(m => m.Phone)</a></p>
                <div class="button-aligner"><a href="@Url.ContentUrl(Model.Link)" class="book-table">BOOK A TABLE</a></div>
            </div>
        </div>
    </div>
</div>